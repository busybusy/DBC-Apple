use_frameworks!

target 'DBC_Example' do
	pod 'DBC', :path => '../'

  target 'DBC_Tests' do
    inherit! :search_paths
    pod 'DBC/Bridged', :path => '../'
	pod 'DBCTesting', :path => '../'
  end
end

